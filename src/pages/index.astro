---
import About from 'src/components/about.astro';
import BaseHead from 'src/components/base-head.astro';
import Header from 'src/components/header.astro';
import Footer from 'src/components/footer.astro';
import Features from 'src/components/features.astro';
import Intro from 'src/components/intro.astro';
const { site } = Astro;
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import '../styles/index.css';
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body
		class="h-full overflow-x-hidden text-base bg-default text-default selection:bg-secondary selection:text-white"
	>
		<Header title={SITE_TITLE} />
		<main>
			<Intro />
			<div class="flex flex-col items-center px-12 md:px-16 py-32 space-y-24">
				<About />
				<Features />
			</div>
		</main>
		<Footer />
	</body>
</html>
