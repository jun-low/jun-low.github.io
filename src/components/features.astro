---
import { Icon } from 'astro-icon';
import type { FeatureItem } from '../types';

const features: Array<FeatureItem> = [
	{
		title: 'Frontend',
		description: 'JavaScript \n Typescript \n Angular \n VueJS \n HTML, CSS \n Bootstrap, Tailwind CSS \n Cypress, Jest, Vitest',
		icon: 'tabler:browser',
	},
	{
		title: 'Backend',
		description: 'Ruby on Rails \n NodeJS \n MongoDB \n PostgreSQL \n REST APIs',
		icon: 'tabler:code',
	},
	{
		title: 'Version Control',
		description: 'Git \n Github \n Bitbucket \n CI/CD \n Docker',
		icon: 'tabler:git-merge',
	},
	{
		title: 'Project Management',
		description: 'JIRA \n Trello \n GitHub project \n Notion',
		icon: 'tabler:rocket',
	},
	{
		title: 'UI/UX Design',
		description: 'Figma \n Adobe XD \n Design Systems \n Wireframing \n Prototyping',
		icon: 'tabler:brush',
	},
	{
		title: 'Soft Skills',
		description: 'Self-starter and great problem solver \n Effective communication \n Analytical thinker and action-oriented \n Quick and eager learner \n Empathetic teamwork collaborator',
		icon: 'tabler:mood-happy',
	},
];
---

<section id="features" class="flex flex-col items-center gap-4 space-y-8 scroll-mt-40">
	<div class="flex flex-col items-center gap-4">
		<h2 class="p-12 text-6xl font-title font-extrabold tracking-tight text-center gradient-text">
			Skills & Proficiencies
		</h2>
	</div>
	<ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
		{
			features.map(({ title, description, icon }) => (
				<li class="flex flex-col items-center gap-4 m-4 p-6 border rounded-3xl border-default bg-offset">
					<div class="w-16 h-16 p-3 border-current rounded-full">
						<Icon name={icon} />
					</div>
					<p class="text-xl font-display font-normal text-center">{title}</p>
					<p class="text-base text-center text-offset whitespace-pre-line">{description}</p>
				</li>
			))
		}
	</ul>
	<slot />
</section>
